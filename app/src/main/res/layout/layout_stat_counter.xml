<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="4dp"
    android:elevation="4dp"
    android:backgroundTint="@android:color/white"
    android:clipToPadding="false"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/stat_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/baseline_sports_soccer_24"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/stat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stat"
        android:textSize="14sp"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/stat_increase"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Increase"
                android:src="@drawable/arrow_upward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/blue"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageButton
                android:id="@+id/stat_decrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Decrease"
                android:src="@drawable/arrow_downward_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
                app:tint="@color/blue"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/stat_value"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp" />
    </LinearLayout>
</LinearLayout>
