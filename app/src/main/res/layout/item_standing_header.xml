<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#DDDDDD">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:text="Pos"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="Team Name"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="MP"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="W"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="D"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="L"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="GF"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="GA"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="GD"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:text="Pts"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="4dp" />

</LinearLayout>
